@model ASM.Models.ViewModels.ViewWebLogin
@{
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}

<h1 class="bg-info text-white">Đăng nhập</h1>
<div class="text-danger" asp-validation-summary="All"></div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label asp-for="Email">Tài khoản Email</label>
                <input asp-for="Email" class="form-control" type="text" autocomplete="off"/>
            </div>
            <div class="form-group">
                <label asp-for="Password">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <button class="btn btn-primary" type="submit">Đăng nhập</button>
        </form>
    </div>
</div>
